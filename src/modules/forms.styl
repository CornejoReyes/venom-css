// Styles for Forms, check it out!
@import 'mixins/forms.styl'
@import 'variables/grid.styl'

.form
  margin 0 1%
  .group
    margin-bottom 10px
    clearfix()
    .label
      font-weight 500
      font-size 1.05em
      display inline-block
      text-align center
      margin-bottom 5px
    .field
      display block
      width: 100%
      height 30px
      padding 5px 10px
      border 1px solid #c4c4c4
      color #474747
      transition border ease-out .2s
      &:focus
        border-color #a3a3a3
        box-shadow 0px 0px 4px #909090
    textarea.field
      display block
      width: 100%
      height 80px
      padding 5px 10px
      border 1px solid #c4c4c4
      color #474747
      transition border ease-out .2s
      &:focus
        border-color #a3a3a3
        box-shadow 0px 0px 4px #909090

  &.vertical
    margin 0 auto
    .group
      margin-bottom 10px
      clearfix()
      .label
        display block
        width 100%
        font-weight 500
        font-size 1.05em
        text-align left
        margin-bottom 5px
        padding 0 $padding-of-columns
      .field
        display block
        width: 100%
        height 30px
        padding 5px 10px
        border 1px solid #c4c4c4
        color #474747
        transition border ease-out .2s
        &:focus
          border-color #a3a3a3
          box-shadow 0px 0px 4px #909090
      textarea.field
        display block
        width: 100%
        height 80px
        padding 5px 10px
        border 1px solid #c4c4c4
        color #474747
        transition border ease-out .2s
        &:focus
          border-color #a3a3a3
          box-shadow 0px 0px 4px #909090
