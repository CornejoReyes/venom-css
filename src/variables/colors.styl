//These variables are the palette for the project, actual values are the default Venom colors

//Main Palette
$primary = #1a7cd6
$warning = #feb046
$danger = #eb544f
//$success = #55cf57
$success = #56c158
$info = #36c1eb
$secondary = #9c9c9c
$default = #fff

//Font colors
$font_color = #5c5c5c

//These colors are used with mains
$dark_default = $default - 5%

$dark_primary = $primary - 20%
$light_primary = $primary + 30%

$dark_warning = $warning - 20%
$light_warning = $warning + 30%

$dark_danger = $danger - 20%
$light_danger = $danger + 30%

$dark_success = $success - 20%
$light_success = $success + 30%

$dark_info = $info - 20%
$light_info = $info + 30%

$dark_secondary = $secondary - 10%
$light_secondary = $secondary + 30%

//Border colors
$border_default = #d0d0d0
$border_primary = $primary - 10%
$border_warning = $warning - 10%
$border_danger = $danger - 10%
$border_success = $success - 10%
$border_info = $info - 10%
$border_secondary = $secondary - 10%

//generic colors
$white = white;
$gray = #ccc;
