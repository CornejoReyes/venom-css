@import 'nib'

.sidenav
  fixed top left
  height 100%
  background $white
  width 250px
  display none
  &-left
    fixed top left
  &-right
    fixed top right
    left initial
  &-open
    animation-name sidenavLeftAnim
    animation-duration 0.5s
    display block


@-webkit-keyframes sidenavLeftAnim
  from
    opacity 0
    -webkit-transform translate3d(-100%, 0, 0)
    transform translate3d(-100%, 0, 0)

  to
    opacity 1
    -webkit-transform none
    transform none

@keyframes sidenavLeftAnim
  from
    opacity 0
    -webkit-transform translate3d(-100%, 0, 0)
    transform translate3d(-100%, 0, 0)

  to
    opacity 1
    -webkit-transform none
    transform none
