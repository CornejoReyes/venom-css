@import 'nib'

.sidenav
  fixed top left
  height 100%
  background $white
  width 250px
  display none
  &-open
    display block
    animation-duration 0.5s
    animation-name sidenavLeftAnim
  &-left
    fixed top left
    border-right 1px solid $gray
    animation-name sidenavLeftAnim
    semantic-one-border-color(right)
  &-right
    fixed top right
    left initial
    border-left 1px solid $gray
    animation-name sidenavRightAnim
    semantic-one-border-color(left)


.sidenav-item
  margin 0px
  padding 5px


@-webkit-keyframes sidenavLeftAnim
  from
    opacity 0
    -webkit-transform translate3d(-100%, 0, 0)
    transform translate3d(-100%, 0, 0)
  to
    opacity 1
    -webkit-transform none
    transform none

@keyframes sidenavLeftAnim
  from
    opacity 0
    -webkit-transform translate3d(-100%, 0, 0)
    transform translate3d(-100%, 0, 0)
  to
    opacity 1
    -webkit-transform none
    transform none


@-webkit-keyframes sidenavRightAnim
  from
    opacity 0
    -webkit-transform translate3d(100%, 0, 0)
    transform translate3d(100%, 0, 0)
  to
    opacity 1
    -webkit-transform none
    transform none

@keyframes sidenavRightAnim
  from
    opacity 0
    -webkit-transform translate3d(100%, 0, 0)
    transform translate3d(100%, 0, 0)
  to
    opacity 1
    -webkit-transform none
    transform none


@-webkit-keyframes sidenavCloseLeftAnim
  from
    opacity 1
  to
    opacity 0
    -webkit-transform translate3d(-100%, 0, 0)
    transform translate3d(-100%, 0, 0)

@keyframes sidenavCloseLeftAnim
  from
    opacity 1
  to
    opacity 0
    -webkit-transform translate3d(-100%, 0, 0)
    transform translate3d(-100%, 0, 0)


@-webkit-keyframes sidenavCloseRightAnim
  from
    opacity 1
  to
    opacity 0
    -webkit-transform translate3d(100%, 0, 0)
    transform translate3d(100%, 0, 0)

@keyframes sidenavCloseRightAnim
  from
    opacity 1
  to
    opacity 0
    -webkit-transform translate3d(100%, 0, 0)
    transform translate3d(100%, 0, 0)
