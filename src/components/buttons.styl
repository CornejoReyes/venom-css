//Here you can customize the buttons. If you don't touch this file, you will be able to use default Venom buttons
@import '../variables/colors.styl'

//The button class
.button
  display inline-block
  text-align center
  vertical-align middle
  line-height 1
  padding 0.6em 0.8em
  margin 0em 0.45em
  border 1px solid $border_default
  border-radius 1px
  color $font_color
  background $default
  cursor pointer
  transition background 0.25s ease-in

  &.disabled
    opacity 0.5
    cursor not-allowed
    &:hover
      background $default

  &:hover
    background $dark_default
    border-color $border_default


  &.primary
    background $primary
    border-color $border_primary
    color #fafafa
    &.disabled
      opacity 0.5
      cursor not-allowed
      &:hover
        background $primary
    &:hover
      background $dark_primary

  &.warning
    background $warning
    border-color $border_warning
    color #fafafa
    &.disabled
      opacity 0.5
      cursor not-allowed
      &:hover
        background $warning
    &:hover
      background $dark_warning

  &.danger
    background $danger
    border-color $border_danger
    color #fafafa
    &.disabled
      opacity 0.5
      cursor not-allowed
      &:hover
        background $danger
    &:hover
      background $dark_danger

  &.success
    background $success
    border-color $border_success
    color #fafafa
    &.disabled
      opacity 0.5
      cursor not-allowed
      &:hover
        background $success
    &:hover
      background $dark_success

  &.info
    background $info
    border-color $border_info
    color #fafafa
    &.disabled
      opacity 0.5
      cursor not-allowed
      &:hover
        background $info
    &:hover
      background $dark_info

  //Sizes
  &.small
    font-size 0.8em

  &.big
    font-size 1.5em

  &.full
    display block
    width 100%
    margin 0

  &.rounded
    border-radius 2em

  //Groups, in this section, you can set the configuration for your button groups
.button-group
  width 100%
  height auto
  display block
  overflow auto
  .button
    border-radius 0px
    margin 0.5em 0em
    float left
    border-right transparent
    position relative

    &:first-child
      border-radius 2px 0px 0px 2px

    &:last-child
      border 1px solid inherit
      border-radius 0px 2px 2px 0px
