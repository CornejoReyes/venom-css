//Here you can customize the buttons. If you don't touch this file, you will be able to use white Venom buttons
@import '../variables/colors.styl'
@import '../mixins/buttons.styl'

//The button class
.button
  display inline-block
  text-align center
  vertical-align middle
  line-height 1
  padding 0.6em 0.8em
  border 1px solid $border_default
  border-radius 1px
  color $font_color
  background $default
  cursor pointer
  transition background 0.25s ease-in

  disabled($default)

  hover($dark_default)

  &.primary
    background $primary
    border-color $border_primary
    color #fafafa
    disabled($primary)
    hover($dark_primary)

  &.warning
    background $warning
    border-color $border_warning
    color #fafafa
    disabled($warning)
    hover($dark_warning)

  &.danger
    background $danger
    border-color $border_danger
    color #fafafa
    disabled($danger)
    hover($dark_danger)

  &.success
    background $success
    border-color $border_success
    color #fafafa
    disabled($success)
    hover($dark_success)

  &.info
    background $info
    border-color $border_info
    color #fafafa
    disabled($info)
    hover($dark_info)

  &.secondary
    background $secondary
    border-color $border_secondary
    color #fafafa
    disabled($secondary)
    hover($dark_secondary)

  //Sizes
  &.small
    font-size 0.8em

  &.big
    font-size 1.5em

  &.full
    display block
    width 100%
    margin 0

  &.rounded
    border-radius 2em

  //Groups, in this section, you can set the configuration for your button groups
.button-group
  width auto
  height auto
  display inline-block
  overflow auto
  .button
    border-radius 0px
    margin 0.5em 0em
    float left
    border-right transparent
    position relative

    &:first-child
      border-radius 2px 0px 0px 2px

    &:last-child
      border-right 1px solid transparent
      border-radius 0px 2px 2px 0px
