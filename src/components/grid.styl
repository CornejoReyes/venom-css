//Here you can configure the grid as you wish, setting the number of columns, breakpoints, etc.

@import '../variables/grid.styl'
@import '../mixins/grid.styl'

.container
  width 90%
  max-width $max-width
  margin 0 auto
  height auto
  &.max
    width 100%

.row
  padding 0 $padding-of-columns
  &:after
    clear both
    content ""
    display block

grid-sistem($number-of-columns,$padding-of-columns)


